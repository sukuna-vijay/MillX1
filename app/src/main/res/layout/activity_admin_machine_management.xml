<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true"
    tools:context=".AdminMachineManagementActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#4F7E1C"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Machine Management"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Machines"
                    android:textColor="#1A1C1E"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#E8F5E9"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="6 Machines"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Search -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E2E8F0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#888888" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Search machine name or status..."
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        app:tint="#888888" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- List Items -->
            <!-- Idly Batter Machine -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_idly_machine"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img1"
                        android:layout_alignStart="@id/img1"
                        android:layout_margin="4dp"
                        android:background="#E8F5E9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Available"
                        android:textColor="#2E7D32"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img1"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/btn_edit1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Idly Batter Mac..."
                            android:textColor="#1A1C1E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#2E7D32" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="5-10 kg per hour"
                                android:textColor="#666666"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="12dp"
                            android:progress="70"
                            android:progressTint="#4F7E1C" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit1"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#F1F3F4"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#4A5568"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconSize="14dp"
                        app:iconTint="#4A5568" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Wheat Machine -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_wheat_machine"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img2"
                        android:layout_alignStart="@id/img2"
                        android:layout_margin="4dp"
                        android:background="#E8F5E9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Available"
                        android:textColor="#2E7D32"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img2"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/btn_edit2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wheat Machine"
                            android:textColor="#1A1C1E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#2E7D32" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="5-10 kg per hour"
                                android:textColor="#666666"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="12dp"
                            android:progress="40"
                            android:progressTint="#4F7E1C" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit2"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#F1F3F4"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#4A5568"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconSize="14dp"
                        app:iconTint="#4A5568" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chilli Powder Machine -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_chilli_machine"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img3"
                        android:layout_alignStart="@id/img3"
                        android:layout_margin="4dp"
                        android:background="#E8F5E9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Available"
                        android:textColor="#2E7D32"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img3"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/btn_edit3"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chilli Powder ..."
                            android:textColor="#1A1C1E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#2E7D32" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="5-10 kg per hour"
                                android:textColor="#666666"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="12dp"
                            android:progress="60"
                            android:progressTint="#4F7E1C" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit3"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#F1F3F4"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#4A5568"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconSize="14dp"
                        app:iconTint="#4A5568" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Rice Making Machine -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_rice_machine"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img4"
                        android:layout_alignStart="@id/img4"
                        android:layout_margin="4dp"
                        android:background="#E8F5E9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Available"
                        android:textColor="#2E7D32"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img4"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/btn_edit4"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice Making M..."
                            android:textColor="#1A1C1E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#2E7D32" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="50-70 kg per hour"
                                android:textColor="#666666"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="12dp"
                            android:progress="85"
                            android:progressTint="#4F7E1C" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit4"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#F1F3F4"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#4A5568"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconSize="14dp"
                        app:iconTint="#4A5568" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Murukku Flour (Not Available) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_flour_machine"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img5"
                        android:layout_alignStart="@id/img5"
                        android:layout_margin="4dp"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Not Available"
                        android:textColor="#C62828"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img5"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/btn_edit5"
                        android:alpha="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Murukku Flour"
                            android:textColor="#1A1C1E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#888888" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="5-10 kg per hour"
                                android:textColor="#888888"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="12dp"
                            android:progress="0"
                            android:progressTint="#CBD5E0" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit5"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#F1F3F4"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#4A5568"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconSize="14dp"
                        app:iconTint="#4A5568" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Karuka Grains Machine -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_karuka_machine"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img6"
                        android:layout_alignStart="@id/img6"
                        android:layout_margin="4dp"
                        android:background="#E8F5E9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Available"
                        android:textColor="#2E7D32"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img6"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/btn_edit6"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karuka Grains ..."
                            android:textColor="#1A1C1E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#2E7D32" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="5-50 kg per hour"
                                android:textColor="#666666"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="12dp"
                            android:progress="30"
                            android:progressTint="#4F7E1C" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit6"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#F1F3F4"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#4A5568"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconSize="14dp"
                        app:iconTint="#4A5568" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#4F7E1C"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
